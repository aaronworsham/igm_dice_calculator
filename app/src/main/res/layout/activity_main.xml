<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2">
        <Button
            android:id="@+id/button_d4"
            android:text="@string/dice_d4"
            android:layout_gravity="left|top" />
        <Button
            android:id="@+id/button_d6"
            android:text="@string/dice_d6"
            android:layout_gravity="left|top" />
        <Button
            android:id="@+id/button_d8"
            android:text="@string/dice_d8"
            android:layout_gravity="left|top" />
        <Button
            android:id="@+id/button_d10"
            android:text="@string/dice_d10"
            android:layout_gravity="left|top" />
        <Button
            android:id="@+id/button_d12"
            android:text="@string/dice_d12"
            android:layout_gravity="left|top" />
        <Button
            android:id="@+id/button_d20"
            android:text="@string/dice_d20"
            android:layout_gravity="left|top" />
        <Button
            android:id="@+id/button_d100"
            android:text="@string/dice_d100"
            android:layout_gravity="left|top" />
        <Button
            android:id="@+id/clear"
            android:text="@string/clear"
            android:layout_gravity="left|top" />
    </GridLayout>
    <ListView
        android:id="@+id/results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid"
        android:scrollIndicators="left" />

</RelativeLayout>
